<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:backgroundTint="#000000"
    tools:context=".view.activity.JogoActivity">

    <TextView
        android:id="@+id/textViewPergunta"
        android:layout_width="346dp"
        android:layout_height="109dp"
        android:gravity="center"
        android:text="TextView"
        android:fontFamily="@font/marvel"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner" />

    <Button
        android:id="@+id/buttonResposta1"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        android:fontFamily="@font/marvel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPergunta" />

    <Button
        android:id="@+id/buttonResposta2"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="Button"
        android:fontFamily="@font/marvel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta1" />

    <Button
        android:id="@+id/buttonResposta3"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="Button"
        android:fontFamily="@font/marvel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta2" />

    <Button
        android:id="@+id/buttonResposta4"
        android:layout_width="335dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="Button"
        android:fontFamily="@font/marvel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="414dp"
        android:layout_height="210dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/imagem1" />

</androidx.constraintlayout.widget.ConstraintLayout>