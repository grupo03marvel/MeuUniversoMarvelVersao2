<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.JogoActivity">

    <TextView
        android:id="@+id/textViewPergunta"
        android:layout_width="346dp"
        android:layout_height="109dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBanner" />

    <Button
        android:id="@+id/buttonResposta1"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginTop="33dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPergunta" />

    <Button
        android:id="@+id/buttonResposta2"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginTop="17dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta1" />

    <Button
        android:id="@+id/buttonResposta3"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginTop="21dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta2" />

    <Button
        android:id="@+id/buttonResposta4"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginTop="13dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResposta3"
        app:layout_constraintVertical_bias="0.196" />

    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="414dp"
        android:layout_height="242dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>